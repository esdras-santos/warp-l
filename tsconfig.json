{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "lib": ["ES2021"],
    "module": "commonjs",
    "types": ["node"],
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "outDir": "./build",
    "sourceMap": true,
    "strict": false,
    "target": "ES2020",
    "noImplicitAny": false
  },
  "include": ["src/**/*"]
}